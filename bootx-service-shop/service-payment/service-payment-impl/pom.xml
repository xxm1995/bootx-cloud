<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>cn.bootx.cloud</groupId>
        <artifactId>service-payment</artifactId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>service-payment-impl</artifactId>
    <packaging>jar</packaging>

    <properties>
        <IJPay.version>2.7.4</IJPay.version>
    </properties>

    <dependencies>

        <dependency>
            <groupId>cn.bootx.cloud</groupId>
            <artifactId>bootx-parent-impl</artifactId>
            <type>pom</type>
        </dependency>

        <!-- mysql -->
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <scope>runtime</scope>
        </dependency>

        <!-- 支付宝支付 -->
        <dependency>
            <groupId>com.github.javen205</groupId>
            <artifactId>IJPay-AliPay</artifactId>
        </dependency>

        <!-- 微信支付 -->
        <dependency>
            <groupId>com.github.javen205</groupId>
            <artifactId>IJPay-WxPay</artifactId>
        </dependency>

        <!-- 银联支付 -->
        <dependency>
            <groupId>com.github.javen205</groupId>
            <artifactId>IJPay-UnionPay</artifactId>
        </dependency>

        <!-- 测试 -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
            <exclusions>
                <exclusion>
                    <groupId>org.junit.vintage</groupId>
                    <artifactId>junit-vintage-engine</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- starters -->
        <dependency>
            <groupId>cn.bootx.cloud</groupId>
            <artifactId>common-mybatis-plus</artifactId>
        </dependency>

        <dependency>
            <groupId>cn.bootx.cloud</groupId>
            <artifactId>common-seata</artifactId>
        </dependency>

        <dependency>
            <groupId>cn.bootx.cloud</groupId>
            <artifactId>common-mq</artifactId>
        </dependency>

        <dependency>
            <groupId>cn.bootx.cloud</groupId>
            <artifactId>service-payment-api</artifactId>
            <version>${bootx-cloud.version}</version>
        </dependency>

    </dependencies>
</project>